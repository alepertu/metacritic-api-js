{
  "name": "@alepertu/metacritic-api",
  "version": "1.1.0",
  "description": "Simple API to get multi-platform Metacritic Scores",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "prepack": "npm run build",
    "test": "mocha",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alepertu/metacritic-api-js.git"
  },
  "keywords": [
    "api",
    "metacritic",
    "gaming"
  ],
  "author": "Alejandro Pertusatti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alepertu/metacritic-api-js/issues"
  },
  "homepage": "https://github.com/alepertu/metacritic-api-js#readme",
  "devDependencies": {
    "@dmeents/semantic-release-yarn": "^1.1.2",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "semantic-release": "^20.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.3.1",
    "cheerio": "^1.0.0-rc.12"
  },
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@dmeents/semantic-release-yarn"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@3.5.0"
}
